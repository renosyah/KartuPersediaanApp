<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/HargaProdukAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/NamaProdukAdapter"
            android:layout_centerVertical="true"
            android:text="Rp 0"
            android:textColor="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/NamaProdukAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/GambarProdukAdapter"
            android:layout_marginLeft="20dp"
            android:text="Nama Produk"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/GambarProdukAdapter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/cardboard" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>