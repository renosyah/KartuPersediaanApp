<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/TitleBarUserSetting"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/TitleUserSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TitleUserSetting"
            android:textAlignment="center"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText

            android:id="@+id/FormUserSettingEditNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Edit Nama"
            android:inputType="textPersonName" />

        <EditText

            android:id="@+id/FormUserSettingEditNamaPerusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Edit Perusahaan"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/FormUserSettingEditEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Edit Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/FormUserSettingEditUserNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Edit Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/FormUserSettingEditPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="Edit Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/FormUserSettingConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="konfirmasi Password"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonUserSettingSave"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Simpan" />

            <Button
                android:id="@+id/buttonUserSettingBatal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Batal" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>