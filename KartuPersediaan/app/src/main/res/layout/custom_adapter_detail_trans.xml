<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <ImageView
            android:id="@+id/imageDetailTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="28dp"
            app:srcCompat="@drawable/list" />

        <TextView
            android:id="@+id/priceProductDetailTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameProductDetailTrans"
            android:layout_below="@+id/nameProductDetailTrans"
            android:text="Rp 0"
            android:textColor="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/nameProductDetailTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageDetailTrans"
            android:layout_marginStart="80dp"
            android:text="product"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/qtyProductDetailTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>