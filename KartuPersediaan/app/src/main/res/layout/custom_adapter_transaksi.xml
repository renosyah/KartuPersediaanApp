<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/TglTransaksiAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/SubTotalTransaksiAdapter"
                android:layout_marginEnd="15dp"
                android:text="20-09-2018"
                android:textSize="12sp" />

            <TextView

                android:id="@+id/SubTotalTransaksiAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="99dp"
                android:text="Rp 0"
                android:textColor="@android:color/holo_green_light" />

            <TextView

                android:id="@+id/KeteranganTransaksiAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/SubTotalTransaksiAdapter"
                android:layout_alignParentStart="true"
                android:layout_marginStart="98dp"
                android:text="Keterangan"
                android:textColor="@android:color/black" />

            <ImageView

                android:id="@+id/GambarTransaksiAdapter"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                app:srcCompat="?android:attr/actionModePasteDrawable" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>